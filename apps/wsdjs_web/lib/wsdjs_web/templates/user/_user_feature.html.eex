<%= if @user.parameter do %>
<div class="user__parameter">
  <h1 class="page-header">Piwik <small>opt-out</small></h1>
  <p>Track the user.</p>
  <footer>
    <%= @user.parameter.piwik %>
  </footer>
</div>
<div class="user__parameter">
  <h1 class="page-header">Video <small>opt-in</small></h1>
  <p>Attach videos to song.</p>
  <footer>
    <%= @user.parameter.video %>
  </footer>
</div>
<% end %>
  