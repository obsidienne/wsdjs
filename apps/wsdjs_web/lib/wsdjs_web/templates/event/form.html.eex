<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control", required: "required" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :starts_on, class: "control-label" %>
    <%= text_input f, :starts_on, class: "form-control", type: "date", required: "required" %>
    <%= error_tag f, :starts_on %>
  </div>

  <div class="form-group">
    <%= label f, :ends_on, class: "control-label" %>
    <%= text_input f, :ends_on, class: "form-control", type: "date", required: "required" %>
    <%= error_tag f, :ends_on %>
  </div>

  <div class="form-group">
    <%= label f, :venue, class: "control-label" %>
    <%= text_input f, :venue, class: "form-control search-place", type: "search" %>
    <%= error_tag f, :venue %>
  </div>

  <div class="form-group">
    <%= label f, :lng, class: "control-label" %>
    <%= text_input f, :lng, class: "form-control", type: "number" %>
    <%= error_tag f, :lng %>
  </div>

  <div class="form-group">
    <%= label f, :lat, class: "control-label" %>
    <%= text_input f, :lat, class: "form-control", type: "number" %>
    <%= error_tag f, :lat %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
