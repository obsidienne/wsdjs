<main>
  <%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
    <div class="form-group">
      <%= text_input f, :email, placeholder: "email", class: "form-control", type: "email" %>
    </div>
    <%= submit "Email me a link to sign in", class: "btn btn-primary" %>
  <% end %>
</main>
