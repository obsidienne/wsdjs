<%= opinion_link("down", @conn, @song, @opinions, @conn.assigns[:current_user]) %>
<%= opinion_link("like", @conn, @song, @opinions, @conn.assigns[:current_user]) %>
<%= opinion_link("up", @conn, @song, @opinions, @conn.assigns[:current_user]) %>

<a class="text-muted" href="<%= song_path(@conn, :show, @song) %>">
  <%= if @count_comments > 0 do %>
  <i class="song-comment"></i>
  <% else %>
  <i class="song-comment-empty"></i>
  <% end %>
</a>
